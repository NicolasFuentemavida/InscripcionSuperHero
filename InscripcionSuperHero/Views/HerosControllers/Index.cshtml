
@model IEnumerable<InscripcionSuperHero.Models.Hero>
@{
    ViewData["Title"] = "Lista De Personajes Marvel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    @if(TempData["Mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    }
<div class="text-center">
    
    <h1 class="display-3">Sistema de administración</h1>
    <br />
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b9/Marvel_Logo.svg/1200px-Marvel_Logo.svg.png" class="img-fluid" alt="Marvel" width="500px">
</div>
<br>
<br>
<br>
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista De Personajes</h3>
        </div>
        <div class="col-sm-6">
            <a class=" btn btn-success  d-block" asp-action="Create" asp-controller="HerosControllers">Agregar</a>
        </div>
    </div>
    <div class="row">
        @*si en model hay registros pasaria al if*@
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.NameHero)</td>
                        <td>@Html.DisplayNameFor(m => m.CreationDate)</td>
                        <td>@Html.DisplayNameFor(m => m.DeathDate)</td>
                        <td>@Html.DisplayNameFor(m => m.Powers)</td>
                        <td>@Html.DisplayNameFor(m => m.Famous)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameHero</td>
                            <td>@item.CreationDate</td>
                            <td>@item.DeathDate</td>
                            <td>@item.Powers</td>
                            <td>@item.Famous
                            </td>
                            <td>
                                <a asp-controller="HerosControllers" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-controller="HerosControllers" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Existen Registros de Marvel</p>
        }
    </div>



</main>

