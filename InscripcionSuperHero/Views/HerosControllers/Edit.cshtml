
@model InscripcionSuperHero.Models.Hero
@{
    ViewData["Title"] = "Editar Personaje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h1 class="display-3">Sistema de administración</h1>
    <br />
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b9/Marvel_Logo.svg/1200px-Marvel_Logo.svg.png" class="img-fluid" alt="Marvel" width="500px">
</div>
<br>
<br>
<br>
<main>
    <div class="row">
        <div class="col-sm-12">
            <h3>editar Personajes</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
