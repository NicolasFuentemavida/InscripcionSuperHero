                </div>
                <div class="form-group">
                    <label asp-for="CreationDate" class="control-label"></label>
                    <input asp-for=" CreationDate" class="form-control" />
                    <span asp-validation-for="CreationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeathDate" class="control-label"></label>
                    <input asp-for=" DeathDate" class="form-control" />
                    <span asp-validation-for="DeathDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Powers" class="control-label"></label>
                    <input asp-for=" Powers" class="form-control" />
                    <span asp-validation-for="Powers" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>Es Famoso</div>
                    <select asp-for="Famous" class="control-label form-control">
                        <option value="0">SI</option>
                        <option value="1">NO</option>
                    </select>
                </div>
