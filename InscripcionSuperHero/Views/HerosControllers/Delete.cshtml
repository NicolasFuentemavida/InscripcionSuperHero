
@model InscripcionSuperHero.Models.Hero
@{
    ViewData["Title"] = "Eliminar Personaje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h1 class="display-3">Sistema de administración</h1>
    <br />
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b9/Marvel_Logo.svg/1200px-Marvel_Logo.svg.png" class="img-fluid" alt="Marvel" width="500px">
</div>
<br>
<br>
<br>
<main>
    <div class="row">
        <div class="col-sm-12">
            <h3>Elimar Personajes</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="DeleteHero">
                <input type="hidden" asp-for="Id"/> 
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NameHero" class="control-label"></label>
                    <input asp-for=" NameHero" class="form-control" disabled />
                    <span asp-validation-for="NameHero" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreationDate" class="control-label"></label>
                    <input asp-for=" CreationDate" class="form-control" disabled />
                    <span asp-validation-for="CreationDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeathDate" class="control-label"></label>
                    <input asp-for=" DeathDate" class="form-control" disabled/>
                    <span asp-validation-for="DeathDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Powers" class="control-label"></label>
                    <input asp-for=" Powers" class="form-control" disabled/>
                    <span asp-validation-for="Powers" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Famous" class="control-label"></label>
                    <input asp-for=" Famous" class="form-control" disabled/>
                    <span asp-validation-for="Famous" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Eliminar Personaje" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</main>
@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}




